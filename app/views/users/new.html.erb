<%= form_for  :user do |f|%>
 <% @user.errors.full_messages.each do |error| %>
 <div>
 <%= error %>
 </div>
 <% end %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :passwordConfirm %>
    <%= f.password_field :password_digest %>
    
    <%= f.submit %>
<% end %>
